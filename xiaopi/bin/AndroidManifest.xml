        <meta-data android:name="com.baidu.speech.SECRET_KEY" android:value="610efc477e9d861c62049cbb25fd6367"/>
        <service android:name="com.baidu.speech.VoiceRecognitionService" android:exported="false" />
        <activity
                android:name="com.baidu.voicerecognition.android.ui.BaiduASRDigitalDialog"
                android:configChanges="orientation|keyboardHidden|screenLayout"
                android:theme="@android:style/Theme.Dialog"
                android:exported="false"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.baidu.action.RECOGNIZE_SPEECH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <!-- end : baidu speech sdk-->

        <activity
                android:name="com.baidu.android.voicedemo.ActivityMain"
                android:configChanges="orientation|keyboardHidden|screenLayout"
                android:theme="@android:style/Theme.DeviceDefault.Light"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.baidu.android.voicedemo.ApiActivity"
                android:configChanges="orientation|keyboardHidden|screenLayout"
                android:theme="@android:style/Theme.DeviceDefault.Light"
                android:screenOrientation="portrait">
        </activity>
        <activity
                android:name="com.baidu.android.voicedemo.ActivityTouch"
                android:configChanges="orientation|keyboardHidden|screenLayout"
                android:theme="@android:style/Theme.DeviceDefault.Light"
                android:screenOrientation="portrait">
        </activity>

        <activity
            android:name="com.baidu.android.voicedemo.Setting"
            android:label="设置"
            android:configChanges="orientation|keyboardHidden|screenLayout"
            android:theme="@android:style/Theme.DeviceDefault.Light"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.baidu.speech.asr.demo.setting" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!---->

        <uses-library android:name="android.test.runner" />
    </application>

</manifest>
